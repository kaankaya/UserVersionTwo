@model UserEditViewModel

<h3>Yeni Görev Ekleme</h3>

<form method="post" asp-controller="Home" asp-action="Edit">
    <div>
        <label for="">Adı</label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label for="">Soyadı</label>
        <input asp-for="LastName" type="text" class="form-control">
        <span asp-validation-for="LastName" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label for="">Email</label>
        <input asp-for="Email" type="email" class="form-control">
        <span asp-validation-for="Email" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label for="">Doğum Tarihi</label>
        <input asp-for="Birthday" type="date" class="form-control">
        <span asp-validation-for="Birthday" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label for="">Kullanıcı Adı</label>
        <input asp-for="UserName" type="text" class="form-control">
        <span asp-validation-for="UserName" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label for="">Şifre</label>
        <input asp-for="Password" type="text" class="form-control">
        <span asp-validation-for="Password" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label for="">Rol</label>
        <input asp-for="Role" type="text" class="form-control">
        <span asp-validation-for="Role" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div class="form-check mt-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
    </div>
    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
</form>